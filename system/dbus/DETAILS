          MODULE=dbus
         VERSION=1.6.0
          SOURCE=$MODULE-$VERSION.tar.gz
         SOURCE2=dbus-fix-sba-for-dbus-activation.patch
      SOURCE_URL=http://$MODULE.freedesktop.org/releases/$MODULE
     SOURCE2_URL=$PATCH_URL
