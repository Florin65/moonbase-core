   SOURCE_URL[1]=http://www.kernel.org/pub/linux/kernel/v4.x
  SOURCE2_URL[0]=$KERNEL_URL/pub/linux/kernel/v4.x
  SOURCE2_URL[1]=http://www.kernel.org/pub/linux/kernel/v4.x
